#!/bin/bash

. /etc/rc.conf
. /etc/rc.d/functions
[ -f /etc/conf.d/axum.conf ] && . /etc/conf.d/axum.conf

PID=`pidof -o %PPID /usr/bin/axum-learner`
case "$1" in
  start)
    stat_busy "Starting Axum Learner Process"
    [ -z "$PID" ] && /usr/bin/axum-learner -i $(axum_id learner) ${AXUMLEARNERARGS}
    if [ $? -gt 0 ]; then
      stat_fail
    else
      echo $PID > /var/run/axum-learner.pid
      add_daemon axum-learner
      stat_done
    fi
    ;;
  stop)
    stat_busy "Stopping Axum Learner Process"
    [ ! -z "$PID" ]  && kill $PID &> /dev/null
    if [ $? -gt 0 ]; then
      stat_fail
    else
      rm -f /var/run/axum-learner.pid
      rm_daemon axum-learner
      stat_done
    fi
    ;;
  restart)
    $0 stop
    sleep 1
    $0 start
    ;;
  *)
    echo "usage: $0 {start|stop|restart}"  
esac
exit 0
